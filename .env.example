# NOTE: This is an example file. Never commit real secrets.
# Copy this file to `.env` and fill in real values; keep `.env` out of version control.

# Frontend app URL and bare domain name (hostname only):
FRONTEND_URL=https://pi-demo-rho.vercel.app
FRONTEND_DOMAIN_NAME=pi-demo-rho.vercel.app

# Backend app URL and bare domain name:
BACKEND_URL=https://backend.example.com
BACKEND_DOMAIN_NAME=backend.example.com

# Obtain the following values from the Pi Developer Portal (do NOT commit real keys):
# Domain validation key:
DOMAIN_VALIDATION_KEY=<YOUR_DOMAIN_VALIDATION_KEY>
# Pi Platform API Key:
PI_API_KEY=<YOUR_PI_API_KEY>

# Session secret: use a long random string (32+ chars). Do not commit your real secret.
SESSION_SECRET=<RANDOM_32+_CHAR_SECRET>

# MongoDB database connection details (replace password placeholder):
MONGODB_DATABASE_NAME=demoapp
MONGODB_USERNAME=demoapp
MONGODB_PASSWORD=<YOUR_MONGODB_PASSWORD>

# This will be prepended to all container names. Changing this will make
# docker-compose lose track of containers; run `docker-compose down` first.
COMPOSE_PROJECT_NAME=pi-demo-app

# Set to "development" for local work; set to "production" in real deployments.
ENVIRONMENT=development

# This directory stores persistent Docker data (volumes):
DATA_DIRECTORY=./docker-data

# URL of the Pi Platform API (default):
PLATFORM_API_URL=https://api.minepi.com
